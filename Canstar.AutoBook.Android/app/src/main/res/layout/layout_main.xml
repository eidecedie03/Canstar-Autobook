<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BackgroundGray"
    tools:context=".activity.Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:background="@color/BackgroundBlack"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            app:srcCompat="@mipmap/canstar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0.40"
            android:orientation="vertical"
            android:weightSum="1">

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:background="@drawable/btn_edittext_round_corner"
                android:editable="false"
                android:gravity="center"
                android:text="Humberto.Carroll7@yahoo.com"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:singleLine="true" />

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="@drawable/btn_edittext_round_corner"
                android:editable="false"
                android:gravity="center"
                android:text="1234"
                android:hint="Password"
                android:inputType="textPassword"
                android:singleLine="true" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/BackgroundBlack" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_custom_1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="login"
            android:textColor="@color/white"
            android:layout_marginRight="100dp"
            android:padding="10dp"/>


        <TextView
            android:id="@+id/tv_register"
            android:layout_below="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Click here for registration"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"/>

    </RelativeLayout>





</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BackgroundGray"
    tools:context=".activity.Registration">

    <include android:id="@+id/toolbar" layout="@layout/toolbar_nohamburger"/>


    <ScrollView
        android:id="@+id/layout_scroll_view"
        android:visibility="visible"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/layout_reg_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Registration"
            android:fontFamily="sans-serif-condensed"
            android:textSize="25sp"
            android:textColor="#FFF"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/FirstName"
            android:layout_below="@+id/lbl_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="@color/white"
            android:hint="First Name">

            <EditText
                android:id="@+id/input_firstname"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Valentina"
                android:textColorHint="#FFF"
                android:background="@drawable/edit_custom_1"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lastname"
            android:layout_below="@+id/FirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/white"
            android:paddingTop="10dp"
            android:hint="Last Name">

            <EditText
                android:id="@+id/input_lastname"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColorHint="#FFF"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="#fff"
                android:text="Koepp"
                android:background="@drawable/edit_custom_1"/>

        </android.support.design.widget.TextInputLayout>




        <android.support.design.widget.TextInputLayout
            android:id="@+id/email"
            android:layout_below="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="@color/white"
            android:hint="Email">

            <EditText
                android:id="@+id/input_email"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColorHint="#FFF"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="#fff"
                android:text="Humberto.Carroll7@yahoo.com"
                android:background="@drawable/edit_custom_1"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/mobile"
            android:layout_below="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/white"
            android:hint="Mobile">

            <EditText
                android:id="@+id/input_mobile"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColorHint="#FFF"
                android:textColor="#FFF"
                android:text="09499673244"
                android:singleLine="true"
                android:gravity="center"
                android:background="@drawable/edit_custom_1"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/birthdate"
            android:layout_below="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="@color/white"
            android:hint="Birthdate">

            <EditText
                android:id="@+id/input_birthdate"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColorHint="#FFF"
                android:editable="true"
                android:text="1234"
                android:textColor="#fff"
                android:singleLine="true"
                android:gravity="center"
                android:background="@drawable/edit_custom_1"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password"
            android:layout_below="@+id/birthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="@color/white"
            android:hint="Password">

            <EditText
                android:id="@+id/input_password"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColorHint="#FFF"
                android:textColor="#fff"
                android:text="1234"
                android:editable="true"
                android:singleLine="true"
                android:gravity="center"
                android:background="@drawable/edit_custom_1"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/confirmpassword"
            android:layout_below="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="@color/white"
            android:hint="Confirm Password">

            <EditText
                android:id="@+id/input_confirmpassword"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColorHint="#FFF"
                android:editable="true"
                android:textColor="#fff"
                android:text="1234"
                android:singleLine="true"
                android:gravity="center"
                android:background="@drawable/edit_custom_1"/>

        </android.support.design.widget.TextInputLayout>

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_below="@+id/confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="100dp">

            <RadioButton
                android:id="@+id/radioCarOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="car owner"
                android:buttonTint="#d2e74c"
                android:textColor="#d2e74c"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#d2e74c"
                android:textColor="#d2e74c"
                android:text="user" />

        </RadioGroup>

    </RelativeLayout>
    </ScrollView>


    <!--Map-->
    <RelativeLayout
        android:id="@+id/layout_map"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <EditText
            android:id="@+id/input_search_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_search"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:textColor="#000"
            android:background="@drawable/btn_edittext_round_corner"/>

        <LinearLayout
            android:layout_below="@+id/input_search_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            tools:context=".activity.Registration" />

                <!--address details here-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="0.30">

                    <Button
                        android:id="@+id/btn_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="search"
                        android:textColor="#fff"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btn_custom_1"/>

                <Button
                    android:id="@+id/btn_register1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textColor="#fff"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_custom_1"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


    <Button
        android:id="@+id/btn_register"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_custom_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="proceed"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>